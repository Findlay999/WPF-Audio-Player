<Window x:Class="Audio_Player.MyDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audio_Player"
        mc:Ignorable="d"
        Title="MyDialogWindow" Height="150" Width="400" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid Name="SetName" Height="150" VerticalAlignment="Top" Margin="0,10,0,-10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Name="TX" FontSize="16" TextAlignment="Left" Margin="50, 0, 50, 0" Grid.Row="1" TextWrapping="WrapWithOverflow" />
            <Button x:Name="OkB"  IsDefault="True" Content="Да" Margin="50,25,0,0" Grid.Row="2" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Width="120" Click="OkB_Click"/>
            <Button x:Name="CancB" Content="Нет" Margin="0,25,70,0" Grid.Row="2" VerticalAlignment="Top" Height="25" HorizontalAlignment="Right" Width="120" Click="CancB_Click"/>
        </Grid>
    </Grid>
</Window>
